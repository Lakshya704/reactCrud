<%- include('layout/header') %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
        <div style="max-width: 500px; margin: 50px auto; padding: 30px; background-color: #ffffff; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
            <h2 style="text-align: center; margin-bottom: 30px; color: black">Add New User</h2>
            <form action="/add" method="post" id="add-form" enctype="multipart/form-data" >
              <label style="display: block; margin-bottom: 8px; color: black;">Name</label>
              <input name="name" type="text" placeholder="Enter name" style="width: 100%; padding: 10px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 4px;" />
        
              <label style="display: block; margin-bottom: 8px; color: black;">Email</label>
              <input name="email" type="email" placeholder="Enter email" style="width: 100%; padding: 10px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 4px;" />
        
              <label style="display: block; margin-bottom: 8px; color: black;">Phone</label>
              <input name="phone" type="tel" placeholder="Enter phone number" style="width: 100%; padding: 10px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 4px;" />
        
              <label  for="image" class="form-label" style="display: block; margin-bottom: 8px; color: black;">Select Image</label>
              <input name="image" type="file" style="margin-bottom: 30px;" />
        
              <button type="submit" style="width: 100%; background-color: #000000; color: white; padding: 12px; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;">
                Add User
              </button>
            </form>
          </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>