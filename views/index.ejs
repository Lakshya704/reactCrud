<%- include('layout/header') %>

<div class="container" style="margin-top: 100px;">
  <div class="row justify-content-center my-4">
    <div class="col-lg-12">

      <% if (message) { %>
        <div style="margin-top: 20px; max-width: 600px; margin-left: auto; margin-right: auto;">
          <div class="alert alert-<%= message.type %> alert-dismissible fade show"
            role="alert"
            style="border-radius: 10px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); padding: 15px 20px; font-size: 16px;">
            <strong><%= message.message %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"
              style="position: absolute; top: 15px; right: 20px;"></button>
          </div>
        </div>
      <% } %>

      <div class="table-responsive">
        <% if (users && users.length > 0) { %>
          <table class="table table-striped text-center" style="border: 1px solid #ccc; min-width: 100%;">
            <thead style="background-color: #000000; color: white;">
              <tr>
                <th style="padding: 20px; font-size: 18px;">ID</th>
                <th style="padding: 20px; font-size: 18px;">Image</th>
                <th style="padding: 20px; font-size: 18px;">Name</th>
                <th style="padding: 20px; font-size: 18px;">E-mail</th>
                <th style="padding: 20px; font-size: 18px;">Phone</th>
                <th style="padding: 20px; font-size: 18px;">Action</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((row, index) => { %>
                <tr class="">
                  <td style="padding-left: 40px;"><%= index + 1 %></td>
                  <td style="padding-left: 80px;">
                    <img src="/uploads/<%= row.image %>" width="50" class="img-thumbnail" alt="Image"
                      style="width: 50px; height: 50px; object-fit: cover;">
                  </td>
                  <td style="padding-left: 80px;"><%= row.name %></td>
                  <td style="padding-left: 80px;"><%= row.email %></td>
                  <td style="padding-left: 80px;"><%= row.phone %></td>
                  <td style="padding-left: 80px;">
                    <a href="/edit/<%= row._id %>" class="text-success me-2">
                      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    </a>
                    <a href="/delete/<%= row._id %>" class="text-danger">
                      <i class="fa fa-trash-o" aria-hidden="true"></i>
                    </a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
        <% } %>
      </div>

    </div>
  </div>
</div>

<%- include('layout/footer') %>
