<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%- title %></title>
  <!-- Font Awesome & Bootstrap -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.datatables.net/v/bs4/dt-2.3.2/datatables.min.css" rel="stylesheet" integrity="sha384-fE7frHQNLGzNl8eKcpGtCoE9nL3u5ijqXo8qfQhibuVrrUk9S+YNzm15kj8XPkJr" crossorigin="anonymous">
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #0f0f0f;
      color: white;
    }

    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 20;
      background-color: rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(8px);
      width: 100%;
    }

    .nav-container {
      max-width: 1200px;
      margin: auto;
      padding: 10px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .brand {
      font-size: 24px;
      font-weight: bold;
      color: #ccc;
      text-decoration: none;
    }

    .brand:hover {
      color: #fff;
    }

    .nav-ul {
      list-style: none;
      display: flex;
      gap: 20px;
      margin: 0;
      padding: 0;
    }

    .nav-link {
      text-decoration: none;
      color: #ccc;
      font-size: 16px;
      transition: color 0.3s;
    }

    .nav-link:hover {
      color: #fff;
    }

    .menu-toggle {
      display: none;
      background: none;
      border: none;
      cursor: pointer;
      color: white;
    }

    .mobile-nav {
      display: none;
      text-align: center;
      overflow: hidden;
      transition: all 0.4s ease;
    }

    .mobile-nav ul {
      list-style: none;
      padding: 0 0 20px;
      margin: 0;
    }

    .mobile-nav a {
      display: block;
      padding: 10px;
      color: #ccc;
      text-decoration: none;
      font-size: 16px;
    }

    .mobile-nav a:hover {
      color: #fff;
    }

    @media (max-width: 640px) {
      .nav-ul {
        display: none;
      }
      .menu-toggle {
        display: block;
      }
      .mobile-nav {
        display: block;
      }
    }
  </style>
</head>
<body>

  <div class="navbar">
    <div class="nav-container">
      <!-- Left: Logo -->
      <a href="/" class="brand">Web Weaver</a>

      <!-- Right: Desktop Nav -->
      <nav class="desktop-nav">
        <ul class="nav-ul">
          <li><a class="nav-link" href="/"><i class="fa fa-home"></i> Home</a></li>
          <li><a class="nav-link" href="/add"><i class="fa fa-user-plus"></i> Add User</a></li>
        </ul>
      </nav>

      <!-- Right: Mobile Toggle Button -->
      <button class="menu-toggle" onclick="toggleMenu()">
        <span id="menu-icon" style="font-size: 24px;">☰</span>
      </button>
    </div>

    <!-- Mobile Nav -->
    <div class="mobile-nav" id="mobile-nav" style="max-height: 0;">
      <ul>
        <li><a href="/"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/add"><i class="fa fa-user-plus"></i> Add User</a></li>
      </ul>
    </div>
  </div>

  <script>
    let isOpen = false;
    function toggleMenu() {
      const nav = document.getElementById("mobile-nav");
      const icon = document.getElementById("menu-icon");
      isOpen = !isOpen;

      if (isOpen) {
        nav.style.maxHeight = "200px";
        icon.textContent = "✖";
      } else {
        nav.style.maxHeight = "0";
        icon.textContent = "☰";
      }
    }
  </script>
</body>
</html>
